@{
}

@model List<CheeseMVC.Models.Menu>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

@if (Model.Count == 0)
 {
    <p>No menus yet!</p>
 }

<ul>
    @foreach (var menu in Model)
     {
        <li>
            <a asp-controller="Menu" 
               asp-action="Index" 
               asp-route-id="@menu.ID">@menu.Name </a>
        </li>
     }
</ul>
<p><a asp-controller="Menu" asp-action="Add">Add Menu</a></p>

